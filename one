import java.util.Scanner;

public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int N = sc.nextInt();
        int M = sc.nextInt();
        int S = sc.nextInt();
        int P = sc.nextInt();
        
        int time = N * M * 60 + N * S + (N - 1) * P;
        
        System.out.println((int)Math.floor(time / 60));
        System.out.println(time % 60);
        
    }
}
